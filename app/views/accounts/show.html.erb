<h1>Account</h1>

<table>
  <tr>
    <th>Account Reference</th>
    <td><%= @account.reference %></td>
  </tr>
  <tr>
    <th>Account Balance</th>
    <td><%= account_balance(@money_transaction_items.first) %></td>
  </tr>
</table>

<%= link_to 'Make a Payment', new_account_payments_path(@account) %>

<%= render partial: 'account_transactions',
           locals: { money_transaction_items: @money_transaction_items } %>
